{
  "manifest_version": 3,
  "name": "Netflix Viewing Statistics",
  "version": "1.0",
  "description": "This Chrome extension is designed to track personal Netflix habits with easy visuals and stats.",
  "permissions": ["activeTab", "webRequest"],
  "host_permissions": [
    "https://www.netflix.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./32x32.png",
      "32": "./32x32.png",
      "48": "./32x32.png",
      "128": "./32x32.png"
    }
  }
}